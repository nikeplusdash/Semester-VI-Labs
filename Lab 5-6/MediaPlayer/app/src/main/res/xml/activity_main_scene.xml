<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="cubic(0,1,0,1)">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="0"
                motion:motionTarget="@+id/song_name" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="20"
                motion:motionTarget="@+id/song_name" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="80"
                motion:motionTarget="@+id/song_name" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/song_name" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/song_artist" />
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="0"
                motion:motionTarget="@+id/song_name" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="0"
                motion:motionTarget="@+id/song_artist" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="20"
                motion:motionTarget="@+id/song_artist" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="80"
                motion:motionTarget="@+id/song_artist" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/media_layout"
            motion:touchAnchorSide="top" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/song_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            motion:layout_constraintTop_toTopOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/play_pause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            motion:layout_constraintTop_toBottomOf="@+id/song_bar" />
        <Constraint
            android:id="@+id/forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:alpha="0"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            motion:layout_constraintStart_toEndOf="@+id/play_pause"
            motion:layout_constraintTop_toTopOf="@+id/play_pause" />
        <Constraint
            android:id="@+id/rewind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            motion:layout_constraintEnd_toStartOf="@+id/play_pause"
            motion:layout_constraintTop_toTopOf="@+id/play_pause" />
        <Constraint
            android:id="@+id/loop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:alpha="0"
            android:translationY="100dp"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            motion:layout_constraintStart_toEndOf="@+id/forward"
            motion:layout_constraintTop_toTopOf="@id/play_pause" />
        <Constraint
            android:id="@+id/volume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:alpha="0"
            android:translationY="100dp"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            motion:layout_constraintEnd_toStartOf="@+id/rewind"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="@id/play_pause" />
        <Constraint
            android:id="@+id/media_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1" />
        <Constraint
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            motion:layout_constraintBottom_toTopOf="@id/song_artist"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@+id/song_image"
            motion:layout_constraintTop_toTopOf="@id/media_layout"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/song_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:progressTint="#00000000"
            motion:layout_constraintBottom_toTopOf="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            motion:layout_constraintTop_toTopOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0"
            tools:targetApi="lollipop" />
        <Constraint
            android:id="@+id/song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="@+id/song_name"
            motion:layout_constraintTop_toBottomOf="@id/song_name"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/song_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            motion:layout_constraintEnd_toEndOf="@+id/song_bar" />
        <Constraint
            android:id="@+id/song_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            motion:layout_constraintStart_toStartOf="@+id/song_bar" />
        <Constraint
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/textView"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/volumeBar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:alpha="0"
            android:scaleX="0"
            android:translationY="100dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/play_pause"
            motion:layout_constraintStart_toStartOf="@id/play_pause"
            motion:layout_constraintTop_toBottomOf="@id/play_pause"
            motion:layout_editor_absoluteY="760dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/song_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            motion:layout_constraintTop_toBottomOf="@+id/song_artist"
            motion:layout_constraintVertical_bias="0.2" />
        <Constraint
            android:id="@+id/song_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            motion:layout_constraintStart_toStartOf="@+id/song_bar" />
        <Constraint
            android:id="@+id/song_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            motion:layout_constraintEnd_toEndOf="@+id/song_bar" />
        <Constraint
            android:id="@+id/play_pause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            motion:layout_constraintTop_toBottomOf="@+id/song_bar" />
        <Constraint
            android:id="@+id/forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            motion:layout_constraintStart_toEndOf="@+id/play_pause"
            motion:layout_constraintTop_toTopOf="@+id/play_pause" />
        <Constraint
            android:id="@+id/rewind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            motion:layout_constraintEnd_toStartOf="@+id/play_pause"
            motion:layout_constraintTop_toTopOf="@+id/play_pause" />
        <Constraint
            android:id="@+id/loop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@+id/forward"
            motion:layout_constraintTop_toTopOf="@id/play_pause" />
        <Constraint
            android:id="@+id/volume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            motion:layout_constraintEnd_toStartOf="@id/rewind"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="@id/play_pause" />
        <Constraint
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>