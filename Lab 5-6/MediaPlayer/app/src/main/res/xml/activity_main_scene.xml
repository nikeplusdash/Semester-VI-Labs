<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="cubic(0,1,0,1)">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/song_name"
               motion:framePosition="0"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/song_name"
               motion:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/song_name"
               motion:framePosition="80"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/song_name"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/song_artist"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/song_name"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/song_artist"
               motion:framePosition="0"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/song_artist"
               motion:framePosition="20"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/song_artist"
               motion:framePosition="80"
               android:alpha="0" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@id/media_layout"
            motion:dragDirection="dragUp"
            motion:touchAnchorSide="top" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="75dp"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintTop_toTopOf="@+id/media_layout"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            android:id="@+id/song_image"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/play_pause"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintTop_toBottomOf="@+id/song_bar"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/forward"
            motion:layout_constraintStart_toEndOf="@+id/play_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/play_pause"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/rewind"
            motion:layout_constraintEnd_toStartOf="@+id/play_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toTopOf="@+id/play_pause"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/loop"
            motion:layout_constraintStart_toEndOf="@+id/forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@id/play_pause"
            android:alpha="0"
            android:translationY="100dp" />
        <Constraint
            android:id="@+id/volume"
            motion:layout_constraintEnd_toStartOf="@+id/rewind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            android:layout_marginEnd="16dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="@id/play_pause"
            android:alpha="0"
            android:translationY="100dp" />
        <Constraint
            android:id="@+id/media_layout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="1" />
        <Constraint
            android:id="@+id/song_name"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0.25"
            motion:layout_constraintTop_toTopOf="@id/media_layout"
            motion:layout_constraintHorizontal_bias="0.2"
            motion:layout_constraintStart_toEndOf="@+id/song_image" />
        <Constraint
            android:id="@+id/song_bar"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#00000000"
            motion:layout_constraintBottom_toTopOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0"
            motion:layout_constraintTop_toTopOf="@+id/media_layout"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            android:alpha="1"
            tools:targetApi="lollipop" />
        <Constraint
            android:id="@+id/song_artist"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0.1"
            motion:layout_constraintTop_toBottomOf="@id/song_name"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="@+id/song_name" />
        <Constraint
            android:id="@+id/song_left"
            motion:layout_constraintEnd_toEndOf="@+id/song_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            android:alpha="0" />
        <Constraint
            android:id="@+id/song_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            motion:layout_constraintStart_toStartOf="@+id/song_bar"
            android:alpha="0" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recyclerView"
            motion:layout_constraintTop_toBottomOf="@id/textView"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="100dp" />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/volumeBar"
            android:scaleX="0"
            motion:layout_constraintEnd_toEndOf="@id/play_pause"
            android:layout_width="150dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/play_pause"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@id/play_pause"
            motion:layout_editor_absoluteY="760dp"
            android:translationY="100dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/song_bar"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintVertical_bias="0.2"
            motion:layout_constraintTop_toBottomOf="@+id/song_artist"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            android:alpha="1"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />
        <Constraint
            android:id="@+id/song_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            motion:layout_constraintStart_toStartOf="@+id/song_bar"
            android:alpha="1" />
        <Constraint
            android:id="@+id/song_left"
            motion:layout_constraintEnd_toEndOf="@+id/song_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            motion:layout_constraintBottom_toTopOf="@+id/song_bar"
            android:alpha="1" />
        <Constraint
            android:id="@+id/play_pause"
            motion:layout_constraintEnd_toEndOf="@+id/media_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="@+id/media_layout"
            motion:layout_constraintTop_toBottomOf="@+id/song_bar"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="@+id/media_layout"
            android:alpha="1" />
        <Constraint
            android:id="@+id/forward"
            motion:layout_constraintStart_toEndOf="@+id/play_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/play_pause"
            android:alpha="1" />
        <Constraint
            android:id="@+id/rewind"
            motion:layout_constraintEnd_toStartOf="@+id/play_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/play_pause"
            android:layout_marginEnd="16dp"
            motion:layout_constraintTop_toTopOf="@+id/play_pause"
            android:alpha="1" />
        <Constraint
            android:id="@+id/loop"
            motion:layout_constraintStart_toEndOf="@+id/forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            android:layout_marginStart="16dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="@id/play_pause"
            android:alpha="1" />
        <Constraint
            android:id="@+id/volume"
            motion:layout_constraintEnd_toStartOf="@id/rewind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@id/play_pause"
            android:layout_marginEnd="16dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="@id/play_pause"
            android:alpha="1" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            android:id="@+id/recyclerView" />
    </ConstraintSet>
</MotionScene>